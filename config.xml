<?xml version='1.0' encoding='utf-8'?>
<widget id="com.palaapps.underdog" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>UnderdogNative</name>
    <icon src="www/img/underdog-icon.png" />
    <description>
        Native wrapper for Underdog
    </description>
    <author email="rick@palaapps.com" href="http://palaapps.com">
        Pala Applications
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="www/img/icons/Icon-App-60x60@3x.png" width="180" height="180" />
    </platform>
</widget>
